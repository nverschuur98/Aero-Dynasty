<UserControl x:Class="AeroDynasty.Core.Views.RouteViews.RouteScheduleWeek"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AeroDynasty.Core.Views.RouteViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <ScrollViewer HorizontalScrollBarVisibility="auto" VerticalScrollBarVisibility="auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="auto"/>
                <!-- Monday -->
                <RowDefinition Height="auto"/>
                <!-- Tuesday -->
                <RowDefinition Height="auto"/>
                <!-- Wednesday -->
                <RowDefinition Height="auto"/>
                <!-- Thursday -->
                <RowDefinition Height="auto"/>
                <!-- Friday -->
                <RowDefinition Height="auto"/>
                <!-- Saturday -->
                <RowDefinition Height="auto"/>
                <!-- Sunday -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
                <ColumnDefinition MinWidth="32" Width="*" SharedSizeGroup="TimeColumn"/>
            </Grid.ColumnDefinitions>

            <!-- Time Header -->
            <TextBlock Text="00:00" Margin="0,5" FontWeight="Light" Grid.Column="1" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="01:00" Margin="0,5" FontWeight="Light" Grid.Column="2" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="02:00" Margin="0,5" FontWeight="Light" Grid.Column="3" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="03:00" Margin="0,5" FontWeight="Light" Grid.Column="4" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="04:00" Margin="0,5" FontWeight="Light" Grid.Column="5" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="05:00" Margin="0,5" FontWeight="Light" Grid.Column="6" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="06:00" Margin="0,5" FontWeight="Light" Grid.Column="7" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="07:00" Margin="0,5" FontWeight="Light" Grid.Column="8" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="08:00" Margin="0,5" FontWeight="Light" Grid.Column="9" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="09:00" Margin="0,5" FontWeight="Light" Grid.Column="10" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="10:00" Margin="0,5" FontWeight="Light" Grid.Column="11" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="11:00" Margin="0,5" FontWeight="Light" Grid.Column="12" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="12:00" Margin="0,5" FontWeight="Light" Grid.Column="13" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="13:00" Margin="0,5" FontWeight="Light" Grid.Column="14" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="14:00" Margin="0,5" FontWeight="Light" Grid.Column="15" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="15:00" Margin="0,5" FontWeight="Light" Grid.Column="16" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="16:00" Margin="0,5" FontWeight="Light" Grid.Column="17" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="17:00" Margin="0,5" FontWeight="Light" Grid.Column="18" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="18:00" Margin="0,5" FontWeight="Light" Grid.Column="19" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="19:00" Margin="0,5" FontWeight="Light" Grid.Column="20" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="20:00" Margin="0,5" FontWeight="Light" Grid.Column="21" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="21:00" Margin="0,5" FontWeight="Light" Grid.Column="22" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="22:00" Margin="0,5" FontWeight="Light" Grid.Column="23" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="23:00" Margin="0,5" FontWeight="Light" Grid.Column="24" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <TextBlock Text="24:00" Margin="0,5" FontWeight="Light" Grid.Column="25" Grid.Row="0" FontSize="10" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>

            <Rectangle Panel.ZIndex="-1" Grid.ColumnSpan="26" Fill="{StaticResource DarkTransparentBackgroundBrush}"/>
            <Rectangle Panel.ZIndex="-1" Grid.Row="1" Grid.RowSpan="7" Fill="{StaticResource DarkTransparentBackgroundBrush}"/>
            
            <!-- Day Rows -->
            <TextBlock Text="Monday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="1" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="24" x:Name="CanvasContainer">
                <ItemsControl ItemsSource="{Binding MondaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Tuesday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="2" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding TuesdaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Wednesday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="3" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding WednesdaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Thursday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="4" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding ThursdaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Friday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="5" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding FridaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Saterday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="6" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding SaturdaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>

            <TextBlock Text="Sunday" HorizontalAlignment="Right" Margin="5" FontWeight="Bold" Grid.Column="0" Grid.Row="7" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
            <Canvas Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="24">
                <ItemsControl ItemsSource="{Binding SundaySchedule, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="0"/>
                            <Setter Property="Canvas.Top" Value="0"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:RouteSchedule RouteScheduleItem="{Binding}" DataContext="{Binding}" ActualWidth="{Binding ListActualWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" Canvas.Left="0" Canvas.Top="0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Canvas>
        </Grid>
    </ScrollViewer>
</UserControl>
