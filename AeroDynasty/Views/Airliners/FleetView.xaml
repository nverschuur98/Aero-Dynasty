<UserControl x:Class="AeroDynasty.Views.Airliners.FleetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AeroDynasty.Views.Airliners"
             xmlns:Page="clr-namespace:AeroDynasty.WPF.Views.Page;assembly=AeroDynasty.WPF"
             xmlns:Form="clr-namespace:AeroDynasty.WPF.Views.Form;assembly=AeroDynasty.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Page:Wrapper>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Manufacturers" Grid.Row="0" FontWeight="Bold" FontSize="14" FontFamily="Montserrat" Foreground="{StaticResource LightAccentBrush}"/>
                <Separator Grid.Row="1" Background="{StaticResource AccentBrush}"/>

                <ListView Background="Transparent" Grid.Row="2" BorderThickness="0" ItemsSource="{Binding Fleet}" ItemContainerStyle="{StaticResource ListViewItemStyle}" Margin="0,5,0,0">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                            <GridViewColumn Header="Name">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Registration.ReturnValue}" Style="{StaticResource TextBlockButton}">
                                            <TextBlock.InputBindings>
                                                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenManufacturerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                            </TextBlock.InputBindings>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model.Name}" />
                            <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Model.Type}" />
                            <GridViewColumn Header="Max Pax" DisplayMemberBinding="{Binding Model.maxPax}" />
                            <GridViewColumn Header="Max Cargo" DisplayMemberBinding="{Binding Model.maxCargo}" />
                            <GridViewColumn Header="Engine Type" DisplayMemberBinding="{Binding Model.EngineType}" />
                            <GridViewColumn Header="Owner" DisplayMemberBinding="{Binding Owner.Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Page:Wrapper>
    </Grid>
</UserControl>
